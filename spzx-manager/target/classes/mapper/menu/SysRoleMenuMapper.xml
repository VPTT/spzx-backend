<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--namesapce对应 mapper接口的全限定符-->
<mapper namespace="com.ptt.spzx.manager.mapper.SysRoleMenuMapper">
    <select id="findSysRoleMenuByRoleId" resultType="long">
        SELECT menu_id FROM `sys_role_menu` where role_id=#{roleId} and is_deleted=0 and is_half = 0
    </select>

    <delete id="deleteByRoleId">
        delete FROM sys_role_menu where role_id=#{roleId}
    </delete>

    <insert id="doAssign">
        insert INTO sys_role_menu(role_id,menu_id,is_half)
        values
        <foreach collection="menuIdList" item="menu" separator=",">
            (#{roleId},#{menu.id},#{menu.isHalf})
        </foreach>
    </insert>
    <update id="updateIsHalf">
        UPDATE sys_role_menu SET is_half=1 where menu_id=#{id}
    </update>

</mapper>