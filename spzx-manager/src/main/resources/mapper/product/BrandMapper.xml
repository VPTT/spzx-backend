<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--namesapce对应 mapper接口的全限定符-->
<mapper namespace="com.ptt.spzx.manager.mapper.BrandMapper">
    <resultMap id="brandMap" type="com.ptt.spzx.model.entity.product.Brand" autoMapping="true">
    </resultMap>
    <sql id="columns">
        id,name,logo,create_time,update_time,is_deleted
    </sql>
    <select id="selectByPage" resultMap="brandMap">
        select <include refid="columns"/> from brand where is_deleted=0 order by id desc
    </select>
    <insert id="insert">
        insert into brand(name,logo) values(#{name},#{logo})
    </insert>
    <update id="updateById">
        update brand SET
        <if test="name !=null and name != ''">
            name=#{name},
        </if>
        <if test="logo != null and logo != ''">
            logo = #{logo},
        </if>
        update_time=now()
        where is_deleted=0 and id=#{id}

    </update>

    <delete id="deleteById">
        update brand set is_deleted=1,update_time=now() where id=#{id}
    </delete>
    <select id="selectAll" resultMap="brandMap">
        select <include refid="columns"/> from brand where is_deleted=0 order by id desc
    </select>

</mapper>