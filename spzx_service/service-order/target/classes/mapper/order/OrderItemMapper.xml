<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--namesapce对应 mapper接口的全限定符-->
<mapper namespace="com.ptt.spzx.order.mapper.OrderItemMapper">
    <resultMap id="orderItemMap" type="com.ptt.spzx.model.entity.order.OrderItem" autoMapping="true">
    </resultMap>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        id,order_id,sku_id,sku_name,thumb_img,sku_price,sku_num,create_time,update_time,is_deleted
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
    insert into order_item (
    id,
    order_id,
    sku_id,
    sku_name,
    thumb_img,
    sku_price,
    sku_num
    ) values (
    #{id},
    #{orderId},
    #{skuId},
    #{skuName},
    #{thumbImg},
    #{skuPrice},
    #{skuNum}
    )
</insert>

    <select id="selectByOrderId" resultMap="orderItemMap">
        select <include refid="columns" />
        from order_item
        where
        order_id = #{orderId}
        and is_deleted = 0
        order by id desc
    </select>
</mapper>