<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--namesapce对应 mapper接口的全限定符-->
<mapper namespace="com.ptt.spzx.product.mapper.ProductDetailsMapper">
    <resultMap id="productDetailsMap" type="com.ptt.spzx.model.entity.product.ProductDetails" autoMapping="true">
    </resultMap>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        id,product_id,image_urls,create_time,update_time,is_deleted
    </sql>

    <select id="selectByProductId" resultMap="productDetailsMap">
        select <include refid="columns" />
        from product_details
        where
        product_id = #{productId}
    </select>
</mapper>